<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="stylesheet" href="/styles/wheel.css" />
    <title><%= data.title %></title>
  </head>
  <body>
    <div class="container centered-container">
      <h2><%= data.title %></h2>
      
      <div class="floating-container">
        <h3>Contestants</h3>
        <div class="centered-image">
          <img
            src="/resources/Odds.jpg"
            height="250px"
            alt="Your Image Alt Text"
          />
        </div>
        <form class="form">
          <% data.names.forEach(item => { %>
          <div class="inputGroup">
            <input id="<%= item %>" name="<%= item %>" type="checkbox" checked /><label
              for="<%= item %>"
              ><%= item %></label
            >
            <button class="deleteButton" onclick="deleteItem('<%= item %>'); return false">Delete</button>
          </div> 
          <% }); %>     
        </form>
      </div>

      <div class="wrapper">
        <div class="wheelContainer">
          <div class="spinBtn">Spin</div>
          <div class="wheel"></div>
        </div>
      </div>
    </div>

    <script src="/scripts/names.js"></script>
    <script src="/scripts/wheel.js"></script>
  </body>
</html>
